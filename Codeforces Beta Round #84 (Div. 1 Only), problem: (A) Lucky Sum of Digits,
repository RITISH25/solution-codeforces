#include <iostream>
#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
int main(){
ll n;
cin>>n;
ll c=0;
while(n>=4 && n%7!=0){
    c++;
    n=n-4;
}
if(n%7==0){

    for(ll i=0;i<c;i++){
        cout<<4;
    }
    for(ll i=0;i<n/7;i++){
        cout<<7;
    }
    return 0;
}
else{
    cout<<-1<<endl;
    return 0;
}


}
